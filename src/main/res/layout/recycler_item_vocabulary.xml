<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_item_vocabulary"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:padding="8dp">

        <ImageView
            android:id="@+id/img_item_vocabulary"
            android:layout_width="64dp"
            android:layout_height="88dp" />

        <TextView
            android:id="@+id/txt_item_vocabulary_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_padding"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:layout_toLeftOf="@+id/txt_item_vocabulary_download"
            android:layout_toRightOf="@+id/img_item_vocabulary"
            android:text="title"
            android:textSize="@dimen/txt_size_eighteen"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_item_vocabulary_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/txt_item_vocabulary_size"
            android:layout_below="@+id/txt_item_vocabulary_title"
            android:layout_marginLeft="@dimen/activity_horizontal_padding"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:layout_toLeftOf="@+id/txt_item_vocabulary_download"
            android:layout_toRightOf="@+id/img_item_vocabulary"
            android:ellipsize="end"
            android:text="content" />

        <TextView
            android:id="@+id/txt_item_vocabulary_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/activity_horizontal_padding"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:layout_toLeftOf="@+id/txt_item_vocabulary_download"
            android:layout_toRightOf="@+id/img_item_vocabulary"
            android:text="下载"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txt_item_vocabulary_download"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:text="loading"
            android:textColor="@color/TxtPink" />

    </RelativeLayout>
</android.support.v7.widget.CardView>