<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/header_title_bar_height"
    android:background="@color/colorPrimary">

    <ImageButton
        android:id="@+id/imgbtn_header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:background="@mipmap/icon_back" />

    <TextView
        android:id="@+id/txt_header_title_item"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/activity_horizontal_double_padding"
        android:layout_toRightOf="@+id/imgbtn_header_title"
        android:gravity="center|left"
        android:text="TPO_03_1C"
        android:textColor="@color/White"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_header_title_menu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:gravity="center"
        android:text="全部下载"
        android:textColor="@color/White" />

</RelativeLayout>