<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="12dp">

    <TextView
        android:id="@+id/txt_item_fragment_do_result_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="this ons is a true"
        android:textColor="@color/TxtWhite"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_item_fragment_do_result_answer"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin">

            <ImageView
                android:id="@+id/img_item_fragment_do_result_judge_a"
                android:layout_width="24dp"
                android:layout_height="24dp" />

            <TextView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:gravity="center"
                android:text="A"
                android:textColor="@color/TxtWhite" />

            <TextView
                android:id="@+id/txt_item_fragment_do_result_judge_a"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="28dp"
                android:gravity="center_vertical"
                android:textColor="@color/TxtWhite" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="4dp">

            <ImageView
                android:id="@+id/img_item_fragment_do_result_judge_b"
                android:layout_width="24dp"
                android:layout_height="24dp" />

            <TextView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:gravity="center"
                android:text="B"
                android:textColor="@color/TxtWhite" />

            <TextView
                android:id="@+id/txt_item_fragment_do_result_judge_b"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="28dp"
                android:gravity="center_vertical"
                android:text="YES"
                android:textColor="@color/TxtWhite" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlayout_item_fragment_do_result_judge_c"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="4dp">

            <ImageView
                android:id="@+id/img_item_fragment_do_result_judge_c"
                android:layout_width="24dp"
                android:layout_height="24dp" />

            <TextView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:gravity="center"
                android:text="C"
                android:textColor="@color/TxtWhite" />

            <TextView
                android:id="@+id/txt_item_fragment_do_result_judge_c"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="28dp"
                android:gravity="center_vertical"
                android:text="YES"
                android:textColor="@color/TxtWhite" />
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>