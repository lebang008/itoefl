<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BackGray"
    android:gravity="center">

    <ImageView
        android:id="@+id/img_fragment_exercise_header"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@mipmap/img_header"
        android:fitsSystemWindows="true"
        android:scaleType="fitStart"
        app:layout_collapseMode="parallax" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="128dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="-16dp"
            android:gravity="bottom|center_horizontal"
            android:padding="@dimen/all_padding"
            android:text="全套TPO01-49"
            android:textColor="@color/TxtBlack"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:padding="@dimen/all_padding"
            android:text="原有34套 + 官方新发布的41-49"
            android:textSize="12sp" />
    </android.support.v7.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img_fragment_exercise_header"
        android:layout_marginBottom="@dimen/all_margin_double"
        android:layout_marginLeft="@dimen/all_margin_double"
        android:text="我预测托福"
        android:textColor="@color/TxtWhite"
        android:textSize="38sp" />

    <com.yarolegovich.discretescrollview.DiscreteScrollView
        android:id="@+id/discrete_scroll_fragment_exercise"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/img_fragment_exercise_header"
        android:paddingLeft="@dimen/activity_horizontal_double_padding"
        android:paddingRight="@dimen/activity_horizontal_double_padding"
        android:paddingTop="48dp"
        app:dsv_orientation="horizontal" />

</RelativeLayout>