<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_padding">

    <ImageView
        android:id="@+id/img_recycler_item_top_listenering_page_progress"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@mipmap/icon_progress_normal_center" />

    <TextView
        android:id="@+id/txt_recycler_item_top_listenering_page_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="8dp"
        android:layout_toLeftOf="@+id/img_recycler_item_top_listenering_page_download"
        android:layout_toRightOf="@+id/img_recycler_item_top_listenering_page_progress"
        android:text="sample"
        android:textColor="@color/Black" />

    <TextView
        android:id="@+id/txt_recycler_item_top_listenering_page_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_recycler_item_top_listenering_page_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="8dp"
        android:layout_toLeftOf="@+id/img_recycler_item_top_listenering_page_download"
        android:layout_toRightOf="@+id/img_recycler_item_top_listenering_page_progress"
        android:text="未必下载" />

    <ImageView
        android:id="@+id/img_recycler_item_top_listenering_page_download"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="12dp"
        android:background="@mipmap/icon_download_ready" />

    <TextView
        android:id="@+id/txt_recycler_item_top_listenering_page_download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/img_recycler_item_top_listenering_page_download"
        android:layout_below="@+id/img_recycler_item_top_listenering_page_download"
        android:text="34%"
        android:textColor="@color/colorPrimary"
        android:textSize="12sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/txt_recycler_item_top_listenering_page_practiced"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:text="3/6"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        android:visibility="invisible" />

</RelativeLayout>